<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_12"
        android:layout_marginBottom="@dimen/margin_8"
        app:cardCornerRadius="@dimen/corner_card_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:layout_marginVertical="@dimen/margin_8"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/width_height_avatar"
                android:layout_height="@dimen/width_height_avatar"
                android:contentDescription="@null" />

            <TextView
                style="@style/contextText"
                android:layout_marginStart="@dimen/margin_16"
                android:id="@+id/tv_name"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_background_status"
                    android:layout_width="@dimen/width_status_textview"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/background_status_close"
                    app:cardCornerRadius="@dimen/corner_card_view"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/tv_status"
                        style="@style/contextText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/margin_horizontal_tv"
                        android:layout_marginVertical="@dimen/margin_vertical_tv"
                        android:gravity="center" />
                </androidx.cardview.widget.CardView>

            </FrameLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>
